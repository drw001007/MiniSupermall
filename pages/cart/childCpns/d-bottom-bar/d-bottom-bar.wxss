/* pages/cart/childCpns/d-bottom-bar/d-bottom-bar.wxss */
.bottom-bar {
  height: 88rpx;
  background-color: #eee;
  padding-left: 30rpx;
  box-shadow: 0 -2 2px rgba(0, 0, 0, .1);
  display: flex;
  align-items: center;
  font-size: 28rpx;

  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.check-box {
  display: flex;
  width: 150rpx;
  align-items: center;
  font-size: 30rpx;
  padding-top: 10rpx;
}

.select-text {
  margin-left: 10rpx;
}

.counter {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding-left: 30rpx;
}

.payment {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
   background-color: #ff5777;
   color: #fff;
   text-align: center;
}