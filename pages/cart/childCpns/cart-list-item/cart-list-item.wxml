<!--pages/cart/childCpns/cart-list-item/cart-list-item.wxml-->
<view class="cart-list-item">
  <view class="item-icon">
    <d-check-icon bind:tap="onCheckClick" data-index="{{index}}" isChecked="{{goods.checked}}"/>
  </view>
  <view class="item-img">
    <image class="item-image" src="{{goods.imageURL}}" mode="aspectFill"></image>
  </view>
  <view class="item-info">
    <view class="title">{{goods.title}}</view>
    <view class="desc">{{goods.desc}}</view>
    <view class="price-count">
      <view class="price">ï¿¥{{goods.price}}</view>
      <view class="count">x{{goods.count}}</view>
    </view>
  </view>
</view>
